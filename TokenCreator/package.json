{
  "name": "token-creator-bot",
  "version": "1.0.0",
  "description": "Telegram Bot for creating ERC-20 tokens on Alvey Chain",
  "main": "bot/index.js",
  "scripts": {
    "start": "node bot/index.js",
    "deploy": "hardhat run scripts/deploy.js --network alvey",
    "setup-db": "node scripts/setupDB.js",
    "repair-mysql": "node scripts/repairMySQL.js",
    "test-db": "node scripts/testConnection.js",
    "create-tables": "node scripts/createTables.js",
    "add-verification-columns": "node scripts/addVerificationColumns.js",
    "migrate-verification": "node scripts/addVerificationColumnsMigration.js",
    "migrate-deployment-info": "node scripts/addDeploymentInfoColumns.js",
    "compile": "hardhat compile"
  },
  "keywords": [
    "telegram",
    "bot",
    "blockchain",
    "erc20",
    "alvey-chain"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "mysql2": "^3.6.5",
    "node-telegram-bot-api": "^0.63.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.1",
    "hardhat": "^2.19.4"
  }
}
